{
  "name": "ts-express-starter-kit",
  "version": "1.0.0",
  "description": "Opinionated starter kit for typescript and express",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "concurrently -k -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch-ts\" \"nodemon ./dist/index.js\"",
    "watch-ts": "tsc -w src/**/*.ts",
    "mon": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "start": "npm run build && npm run serve",
    "serve": "node dist/index.js",
    "test": "cross-env NODE_ENV=test nyc mocha --reporter spec --require ts-node/register 'tests/**/*.test.ts' --exit",
    "pretest": "cd src/db/utils && cross-env NODE_ENV=test npx sequelize-cli db:migrate"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "keywords": [
    "typescript",
    "express"
  ],
  "dependencies": {
    "@types/config": "0.0.34",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.0",
    "@types/lodash": "^4.14.138",
    "@types/morgan": "^1.7.35",
    "@types/mysql": "^2.15.6",
    "@types/node": "^12.0.10",
    "@types/uuid": "^3.4.6",
    "config": "^3.1.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.0",
    "express": "^4.17.1",
    "express-enrouten": "^1.3.0",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "mysql": "^2.17.1",
    "mysql2": "^2.0.2",
    "sequelize": "^5.18.4",
    "sequelize-cli": "^5.5.0",
    "stellar-sdk": "^4.0.2",
    "swagger-ui-express": "^4.1.3",
    "typescript": "^3.5.1",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/chai-http": "0.0.29",
    "@types/mocha": "^2.2.32",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "concurrently": "^5.0.0",
    "mocha": "^7.0.1",
    "nodemon": "^2.0.1",
    "nyc": "^15.0.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.5.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
